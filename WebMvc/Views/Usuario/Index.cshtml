

@model IEnumerable<WebMvc.Models.UsuarioViewModel>

<a disable-by-claim-name="Usuario" disable-by-claim-value="Editar" class="btn btn-info" asp-controller="Usuario" asp-action="Adicionar"><spam class="fa fa-pencil-alt"></spam>Novo </a>
<hr>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SobreNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model. idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>    
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SobreNome)
                </td>
                <td>
                    @item.idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-right">
                    <a class="btn btn-warning" asp-controller="Usuario" asp-action="Detalhes" asp-route-id="@item.Id"><spam class="fa fa-search"></spam>Detalhes </a>
                    <a disable-by-claim-name="Usuario" disable-by-claim-value="Editar" class="btn btn-info" asp-controller="Usuario" asp-action="Editar" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam>Editar </a>
                    <a disable-by-claim-name="Usuario" disable-by-claim-value="Excluir" class="btn btn-danger" asp-controller="Usuario" asp-action="Excluir" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
